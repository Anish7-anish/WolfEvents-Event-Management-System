<p style="color: green"><%= notice %></p>

<h1>Event tickets</h1>
<% if @event_tickets %>
  <table class="eventTicket-table">
    <thead>
    <tr>
      <th>Attendee ID</th>
      <th>Event Name</th>
      <th>Date</th>
      <th>Confirmation Number</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @event_tickets.each do |event_ticket| %>
      <tr>
        <td><%= event_ticket.attendee_name %></td>
        <td><%= event_ticket.event_name %></td>
        <td><%= event_ticket.event.date.strftime('%Y-%m-%d') if event_ticket.event.date %></td>
        <td><%= event_ticket.confirmation_number %></td>
        <td><%= link_to "Show this event ticket", event_ticket %></td>
        <% if event_ticket.event.category.in?(['Miscellaneous', 'Private']) %>
          <td>N/A</td>
        <% else %>
          <td><%= link_to "Write a Review", new_review_path(event_id: event_ticket.event_id) %></td>
        <% end %>

      </tr>
    <% end %>
    </tbody>
  </table>

