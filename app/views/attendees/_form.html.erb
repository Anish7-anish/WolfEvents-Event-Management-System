<%= form_with(model: attendee) do |form| %>
  <% if attendee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attendee.errors.count, "error") %> prohibited this attendee from being saved:</h2>

      <ul>
        <% attendee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless attendee.persisted? %>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :password_digest, "Password", style: "display: block" %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :is_admin, style: "display: block" %>
      <%= form.check_box :is_admin %>
    </div>
  <% else %>
    <div>
      <strong>Email:</strong> <%= attendee.email %>
    </div>

    <div>
      <strong>Is Admin:</strong> <%= attendee.is_admin ? 'Yes' : 'No' %>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :credit_card_info, style: "display: block" %>
    <%= form.text_field :credit_card_info %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>