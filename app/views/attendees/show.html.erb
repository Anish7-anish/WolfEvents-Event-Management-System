<p style="color: green"><%= notice %></p>
<%= render @attendee %>
<div>
  <%= link_to "Edit this attendee", edit_attendee_path(@attendee) %> |
  <%= link_to "Back to attendees", attendees_path %>
  <% if !@attendee.is_admin %>
    <%= button_to "Destroy this attendee", @attendee, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
